{
    "name": "@tspvivek/baasix-mcp-server",
    "version": "0.0.4",
    "description": "Model Context Protocol server for Baasix headless CMS operations",
    "type": "module",
    "main": "baasix/index.js",
    "files": [
        "baasix/",
        "README.md"
    ],
    "scripts": {
